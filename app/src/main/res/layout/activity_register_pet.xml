<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="60dp"
    android:layout_marginRight="60dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.example.isolatorv.wipi.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:id="@+id/profile_image"
        android:layout_marginTop="110dp"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/wipi_login_image"
        android:clickable="true"
        app:civ_border_width="2dp"
        app:civ_border_color="#c8c8c8"/>


    <EditText
        android:hint="Pet Name"
        android:layout_marginTop="20dp"
        android:id="@+id/pet_name"
        android:inputType="textPersonName"
        android:background="@drawable/edittext_border"
        android:paddingLeft="15dp"
        android:textSize = "15sp"
        android:textColorHint="#cccccc"
        android:textColor = "#000000"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <EditText
        android:layout_marginTop="20dp"
        android:hint="Pet Type"
        android:id="@+id/pet_type"
        android:inputType="text"
        android:background="@drawable/edittext_border"
        android:paddingLeft="15dp"
        android:textSize = "15sp"
        android:textColorHint="#cccccc"
        android:textColor = "#000000"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <EditText
        android:layout_marginTop="20dp"
        android:hint="Pet Age"
        android:id="@+id/pet_age"
        android:inputType="text"
        android:background="@drawable/edittext_border"
        android:paddingLeft="15dp"
        android:textSize = "15sp"
        android:textColorHint="#cccccc"
        android:textColor = "#000000"
        android:layout_width="match_parent"
        android:layout_height="40dp" />



    <android.support.v7.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:id="@+id/buttonUpload"
        android:text="Register"
        android:background="@color/colorNavAccentSelected"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>